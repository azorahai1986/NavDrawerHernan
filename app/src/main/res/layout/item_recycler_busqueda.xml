<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_shadow_end_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_busqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="5dp"
        android:background="@color/color_para_fondos">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@color/color_para_fondos"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/imageview_busqueda"
                android:src="@drawable/constantine"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_nombre_busqueda"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/texto_descripcion"
                    android:textSize="12sp"
                    android:elevation="10dp"
                    android:textColor="@color/colorPrimary"/>

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/colorPrimaryDark"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_precio_busqueda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_140"
                        android:textSize="18sp"
                        android:textColor="@color/amarillo"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_template_cantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="cantidad"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_template_precio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:text="SubTotal"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textview_marca_busqueda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/marca"
                    android:textStyle="italic"
                    android:textColor="#ED0755"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:elevation="20dp"
        app:cardCornerRadius="15dp"
        android:background="@color/cardview_shadow_end_color"
        app:cardMaxElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btSumar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:elevation="8dp"
                android:src="@drawable/ic_sumar" />
            <TextView
                android:id="@+id/tvValorCantidad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0..."
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"/>

            <ImageButton
                android:id="@+id/btRestar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:elevation="8dp"
                android:src="@drawable/ic_resta"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>