<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_dependiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">


        <ImageView
            android:id="@+id/imageview_dependiente"
            android:src="@drawable/constantine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/text_dependiente_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/imagen_de_constantin"
            android:textSize="18sp"
            android:shadowColor="@color/cardview_dark_background"
            android:shadowDx="2"
            android:shadowDy="8"
            android:shadowRadius="7"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_negro"/>

        <TextView
            android:id="@+id/text_dependiente_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/_140"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:shadowColor="@color/cardview_dark_background"
            android:shadowDx="2"
            android:shadowDy="8"
            android:shadowRadius="3"/>

        <TextView
            android:id="@+id/text_dependiente_marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/imagen_de_constantin"
            android:textColor="#B30024"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="18sp"
            android:shadowColor="@color/cardview_dark_background"
            android:shadowDx="2"
            android:shadowDy="8"
            android:shadowRadius="7"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>