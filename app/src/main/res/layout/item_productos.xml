<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_para_fondos"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_busqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:elevation="10dp">


            <ImageView
                android:id="@+id/imageview"
                android:src="@drawable/constantine"
                android:layout_width="330dp"
                android:layout_height="180dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/textview_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/imagen_de_constantin"
                android:textSize="14sp"
                android:elevation="10dp"
                android:shadowColor="@color/cardview_dark_background"
                android:shadowDx="2"
                android:shadowDy="8"
                android:shadowRadius="7"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/color_negro"/>

            <TextView
                android:id="@+id/textview_marca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_negro"
                android:text="@string/imagen_de_constantin"
                android:textSize="14sp"
                android:shadowColor="@color/cardview_dark_background"
                android:shadowDx="2"
                android:shadowDy="8"
                android:shadowRadius="7"/>
            <TextView
                android:id="@+id/textview_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/_140"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/color_negro"
                android:shadowColor="@color/cardview_dark_background"
                android:shadowDx="2"
                android:shadowDy="8"
                android:shadowRadius="8"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>