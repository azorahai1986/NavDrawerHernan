<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_sub_porcen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView_sub"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/constantine"
                android:layout_marginLeft="20dp"
                app:layout_constraintCircleRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/text_descripcion_sub"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_descripcion_sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="constantine"
                android:textStyle="normal"
                android:textColor="#B80A0A"
                android:textAlignment="center"
                android:textSize="24dp"
                android:shadowColor="@color/cardview_dark_background"
                android:shadowDx="2"
                android:shadowDy="8"
                android:shadowRadius="7"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imageView_sub"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/textview_pocen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="%0.0"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="22dp"
                android:shadowColor="@color/cardview_dark_background"
                android:shadowDx="2"
                android:shadowDy="8"
                android:shadowRadius="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imageView_sub"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_descripcion_sub" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>